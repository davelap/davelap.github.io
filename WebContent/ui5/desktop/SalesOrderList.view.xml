<mvc:View controllerName="ui5.desktop.SalesOrderList"
    xmlns="sap.ui.commons"
    xmlns:table="sap.ui.table"
    xmlns:sap.ui.core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" >


    <table:Table width="100%"  rows="{/SalesOrderCollection}">
		<table:Column sortProperty="SoId" filterProperty="SoId">
			<Label text="{i18n>SalesOrderNo}"/>
			<table:template >
				<TextField editable="false" value="{SoId}"/>
			</table:template>
		</table:Column>
		<table:Column sortProperty="BusinessPartner/PartnerId" filterProperty="BusinessPartner/PartnerId">
			<Label text="{i18n>SoldTo}"/>
			<table:template>
				<TextField editable="false" value="{BusinessPartner/PartnerId}"/>
			</table:template>
		</table:Column>
		<table:Column  sortProperty="BusinessPartner/CompanyName" filterProperty="BusinessPartner/CompanyName">
			<Label text="{i18n>SoldToName}"/>
			<table:template>
				<TextField editable="false" value="{BusinessPartner/CompanyName}"/>
			</table:template>
		</table:Column>
	</table:Table>
</mvc:View>