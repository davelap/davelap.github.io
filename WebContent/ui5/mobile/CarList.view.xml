<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<mvc:View 	xmlns:core="sap.ui.core" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m"
			controllerName="ui5.mobile.CarList" 
			xmlns:html="http://www.w3.org/1999/xhtml">
	<Page xmlns="sap.m" title="Car Listing">
		<headerContent>
	     	<Button type="Back" press="BackMainMenu"/>
        </headerContent>
		<content>

			<Table xmlns="sap.m" title="Car Listing22" items="{/cars/cars}" visiblerowcount="7" selectionMode="Multi" selectionBehavior="RowSelector">
				<items> <!-- sap.m.ListItemBase -->
		          <ColumnListItem>
		            <cells>
		              <Label xmlns="sap.m" text="{maker}" />
		              <Label xmlns="sap.m" text="{model}" />
		              <Label xmlns="sap.m" text="{year}" />
		              <RatingIndicator xmlns="sap.m" value="{rating}" enabled="false"/>
		            </cells>
		          </ColumnListItem>
				</items>
				<columns>
					<Column xmlns="sap.m">
						<header><Label xmlns="sap.m" text="Maker"/></header>
					</Column>
					<Column xmlns="sap.m">
						<header><Label xmlns="sap.m" text="Model"/></header>
					</Column>
					<Column xmlns="sap.m">
						<header><Label xmlns="sap.m" text="Year"/></header>
					</Column>
					<Column xmlns="sap.m">
						<header><Label xmlns="sap.m" text="Rating"/></header>
					</Column>
				</columns>
			</Table>
		</content>
	</Page>
</mvc:View>