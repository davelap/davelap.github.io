<mvc:View 
	controllerName="view.desktop.PlannedOrderList"
	xmlns="sap.m" 
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page 
		id="detailsPage"
		title="{i18n>DETAIL_TITLE}"
		class="sapUiFioriObjectPage"  
		showNavButton="{device>/isPhone}" 
		navButtonPress="handleNavButtonPress">
	
        <Table items="{/Customers}">
    		<items>
              <ColumnListItem>  
                <cells>  
                  <ObjectIdentifier  text="{CustomerID}" />  
                </cells>  
                <cells>  
                  <ObjectIdentifier  text="{CompanyName}" />  
                </cells>  
              </ColumnListItem>  
    		</items>
    		<columns>
    		  <Column   width="12em">  
                <Label text="Customer ID" />  
              </Column>  
              <Column   width="12em">  
                <Label text="Customer Name" />  
              </Column>  
    		</columns>
        </Table>
	</Page>
</mvc:View>