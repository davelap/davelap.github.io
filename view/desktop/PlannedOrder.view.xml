<sap.ui.core.mvc:View controllerName="view.desktop.PlannedOrder"
    xmlns="sap.ui.commons"
    xmlns:m="sap.m"
    xmlns:layout="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:sap.ui.core="sap.ui.core" 
    xmlns:sap.ui.core.mvc="sap.ui.core.mvc" >

    <TabStrip width="100%">
    	<tabs>
    	    <Tab text="General Data">
	    		<content>
    		        <layout:SimpleForm maxContainerCols="2" editable="true">
                        <layout:content>
    	    		        <Label text="{i18n>PlannerOrderNo}"/>
                            <TextField value="{OrderNumber}"/>
                        </layout:content>
                    </layout:SimpleForm>
	    		</content>
    	    </Tab>
    	</tabs>
    </TabStrip>
    
    <Panel text="Items">
        <content>
            <table:Table width="100%" rows="{Components}">
        		<table:Column >
        			<Label text="{i18n>ItemNo}"/>
        			<table:template>
        				<TextField editable="false" value="{InternalItemNo}"/>
        			</table:template>
        		</table:Column>
        		<table:Column>
        			<Label text="{i18n>Component}"/>
        			<table:template>
        				<TextField value="{Component}"/>
        			</table:template>
        		</table:Column>
        	</table:Table>
        </content>
    </Panel>
</sap.ui.core.mvc:View>